<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Base configuration: prefer secure connections but allow cleartext for development -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system" />
            <certificates src="user" />
        </trust-anchors>
    </base-config>
      <!-- Allow cleartext for localhost and development servers -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">10.0.2.2</domain> <!-- Android emulator localhost -->
        <domain includeSubdomains="true">192.168.1.0/24</domain> <!-- Local network -->
        <domain includeSubdomains="true">127.0.0.1</domain>
        <domain includeSubdomains="true">rp</domain> <!-- Development server -->
        <domain includeSubdomains="true">tomer-laptop</domain> <!-- Development server -->
    </domain-config>
</network-security-config>

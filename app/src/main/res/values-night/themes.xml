<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Night application theme -->
    <style name="Theme.PostAngel" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary_night</item>
        <item name="colorPrimaryVariant">@color/primary_dark_night</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/accent_night</item>
        <item name="colorSecondaryVariant">@color/primary_variant_night</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Background colors - darker versions for night mode -->
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorOnBackground">@color/on_background_dark</item>
        <item name="colorOnSurface">@color/on_background_dark</item>
        <!-- Status bar color -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <!-- Make navigation bar dark -->
        <item name="android:navigationBarColor">@color/background_dark</item>
    </style>
</resources>

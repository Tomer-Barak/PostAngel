<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity"
    android:padding="16dp">

    <TextView
        android:id="@+id/settingsTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/settings"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>

    <TextView
        android:id="@+id/serverUrlLabelTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/server_url"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/settingsTitleTextView"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="32dp"/>

    <EditText
        android:id="@+id/serverUrlEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_server_url"
        android:inputType="textUri"
        app:layout_constraintTop_toBottomOf="@id/serverUrlLabelTextView"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"/>
          <TextView
        android:id="@+id/apiKeyLabelTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/openai_api_key"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/serverUrlEditText"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"/>    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/apiKeyLabelTextView"
        android:layout_marginTop="8dp">

        <EditText
            android:id="@+id/apiKeyEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/enter_openai_api_key"
            android:inputType="textVisiblePassword" />

        <ImageButton
            android:id="@+id/apiSecurityInfoButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/api_key_security_info"
            android:src="@android:drawable/ic_dialog_info" />
    </LinearLayout>
      <Button
        android:id="@+id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/save"
        app:layout_constraintTop_toBottomOf="@id/apiKeySecurityCard"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>
        
    <TextView
        android:id="@+id/knowledgeBaseLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/knowledge_base"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/saveButton"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="32dp"/>
        
    <TextView
        android:id="@+id/knowledgeBaseDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/knowledge_base_description"
        app:layout_constraintTop_toBottomOf="@id/knowledgeBaseLabel"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="4dp"/>

    <Button
        android:id="@+id/knowledgeBaseButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/manage_knowledge_base"
        app:layout_constraintTop_toBottomOf="@id/knowledgeBaseDescription"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/privacyPolicyLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/view_privacy_policy"
        android:textColor="@color/purple_500"
        android:padding="16dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="24dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
